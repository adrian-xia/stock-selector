# ===========================================
# A股智能选股系统 - 环境变量配置
# ===========================================

# --- 应用 ---
APP_ENV=development
LOG_LEVEL=INFO

# --- 数据库 (PostgreSQL) ---
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/stock_selector
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# --- BaoStock 数据源 ---
BAOSTOCK_RETRY_COUNT=3
BAOSTOCK_RETRY_INTERVAL=2.0
BAOSTOCK_TIMEOUT=30
BAOSTOCK_QPS_LIMIT=5
BAOSTOCK_POOL_SIZE=10              # 连接池大小（应 >= 并发数）
BAOSTOCK_POOL_TIMEOUT=30.0
BAOSTOCK_SESSION_TTL=3600.0

# --- Daily Sync (批量同步) ---
DAILY_SYNC_BATCH_SIZE=100
DAILY_SYNC_CONCURRENCY=8           # 并发数（保守设置，避免限流）

# --- AI (Gemini) ---
GEMINI_API_KEY=AIzaSyB2oCLhkqbqfLoQM-YSCl1MSvcwxIqPcwI
GEMINI_USE_ADC=false
GEMINI_GCP_PROJECT=
GEMINI_GCP_LOCATION=us-central1
GEMINI_MODEL_ID=gemini-2.5-flash
GEMINI_MAX_TOKENS=4000
GEMINI_TIMEOUT=30
GEMINI_MAX_RETRIES=2
AI_DAILY_BUDGET_USD=1.0

# --- Cache (Redis) ---
CACHE_TECH_TTL=90000
CACHE_PIPELINE_RESULT_TTL=172800
CACHE_WARMUP_ON_STARTUP=true
CACHE_REFRESH_BATCH_SIZE=500

# --- CORS ---
CORS_ORIGINS=["http://localhost:5173"]
